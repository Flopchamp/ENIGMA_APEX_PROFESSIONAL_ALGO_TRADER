
# Configuration for NinjaTrader + AlgoBox Integration

# ===========================================
# NINJATRADER CONNECTION SETTINGS
# ===========================================
NINJATRADER_ENABLED=true
NINJATRADER_HOST=localhost
NINJATRADER_PORT=8080
NINJATRADER_USERNAME=your_ninja_username
NINJATRADER_PASSWORD=your_ninja_password

# ===========================================
# ALGOBOX INTEGRATION
# ===========================================
ALGOBOX_ENABLED=true
ALGOBOX_SCREEN_REGION=0,0,1920,1080
ALGOBOX_OCR_SENSITIVITY=85
ALGOBOX_SIGNAL_DELAY=1.5

# ===========================================
# TRADING CONFIGURATION
# ===========================================
TRADING_MODE=TRAINING
ACCOUNT_SIZE=50000
MAX_DAILY_LOSS=2500
MAX_POSITION_SIZE=5
DEFAULT_STOP_LOSS=20
DEFAULT_TAKE_PROFIT=40

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================
NOTIFICATIONS_ENABLED=true
DESKTOP_NOTIFICATIONS=true
SOUND_ALERTS=true
EMAIL_NOTIFICATIONS=false
SMS_NOTIFICATIONS=false

# ===========================================
# API KEYS (Optional - for enhanced features)
# ===========================================
OPENAI_API_KEY=your_openai_key_here
DISCORD_WEBHOOK=your_discord_webhook_here

# ===========================================
# RISK MANAGEMENT
# ===========================================
KELLY_CRITERION_ENABLED=true
APEX_COMPLIANCE_ENABLED=true
RISK_PROFILE=CONSERVATIVE
